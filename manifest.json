{
  "manifest_version": 3,
  "name": "Form Cache",
  "description": "Persist form data across page reloads and navigation. Saves you from entering the same data twice if you refresh a page or navigate away from it.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/toggle.html",
    "default_icon": "images/icon-16.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/worker.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage"]
}
